<Window x:Class="Initiative_tracker.NewGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Initiative_tracker"
        mc:Ignorable="d"
        Title="New Group" Height="90" Width="300">
    <StackPanel>
        <DockPanel>
            <TextBlock Text="Name"/>
            <TextBox Name="namebox" Margin="5,5,5,5"/>
        </DockPanel>
        <DockPanel>
            <Button Content="Add" Width="145" Click="addClick"></Button>
            <Button Content="Done" Click="doneClick"></Button>
        </DockPanel>
    </StackPanel>
</Window>
